<h1><%= @article.title %></h1>
<cite>Author: <%= @article.user.name %></cite>
<p><%= sanitize @article.body %></p>

<em><time datetime = "<%= @article.form_created_at %>">
    <%= @article.form_created_at %>
</time></em>


<div>
  <%= link_to "Edit", edit_article_path(@article) %></li> |
  <%= link_to "Delete", @article, data: {turbo_method: :delete, turbo_confirm: "Are u shure?"} %></li>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form"%>